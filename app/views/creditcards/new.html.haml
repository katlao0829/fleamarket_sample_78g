    .creditcard
      .creditcard__number
        カード番号
      = text_field_tag "#", "", class: "creditcard__number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text"
      %br
      .creditcard__number 有効期限
      %select#exp_month{name: "#", type: "text",class:"creditcard__number"}
        %option{value: ""} --
        %option{value: "1"}01
        %option{value: "2"}02
        %option{value: "3"}03
        %option{value: "4"}04
        %option{value: "5"}05
        %option{value: "6"}06
        %option{value: "7"}07
        %option{value: "8"}08
        %option{value: "9"}09
        %option{value: "10"}10
        %option{value: "11"}11
        %option{value: "12"}12
      .creditcard__number 月
      %select#exp_year{name: "exp_year", type: "text", class: "creditcard__number"}
        %option{value: ""} --
        %option{value: "2019"}19
        %option{value: "2020"}20
        %option{value: "2021"}21
        %option{value: "2022"}22
        %option{value: "2023"}23
        %option{value: "2024"}24
        %option{value: "2025"}25
        %option{value: "2026"}26
        %option{value: "2027"}27
        %option{value: "2028"}28
        %option{value: "2029"}29
      .creditcard__number 年
      %br
      .creditcard__number セキュリティコード
      = text_field_tag "cvc", "", class: "creditcard__number", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "#"
      #card_token
      = submit_tag "追加する", id: "#",class: "creditcard__btn"

