= render "card_header"
.Single
  .Single__main
    .chapter-head クレジットカード情報入力
    = form_tag(card_index_path, method: :post, id: "charge-form", class: "form-tag", name: "inputForm") do
      .number-details
        .card-number カード番号
        %span.form-require 必須
      .number
        = text_field_tag 'payment_card_no', "", class: 'cardnumber', id: "payment_card_no", placeholder: '半角数字のみ', type: "text", maxlength: "16"
      -# 事前に各カード会社の画像を入れておき、呼び出す。
      -# .image
      -#   = image_tag(image_path('cards/visa.png'), class: 'visa')
      -#   = image_tag(image_path('cards/master.png'), class: 'master')
      -#   = image_tag(image_path('cards/jcb.png'), class: 'jcb')
      -#   = image_tag(image_path('cards/amex.png'), class: 'amex')
      -#   = image_tag(image_path('cards/diners.png'), class: 'diners')
      -#   = image_tag(image_path('cards/discover.png'), class: 'discover')
      .number-details
        .card-number 有効期限
        %span.form-require 必須
      .number-details
        .month
          %select#payment_card_month.card-default{name: "payment_card_month", type: "text", class: "number-herf"}
            %option{value: "1"} 01
            %option{value: "2"} 02
            %option{value: "3"} 03
            %option{value: "4"} 04
            %option{value: "5"} 05
            %option{value: "6"} 06
            %option{value: "7"} 07
            %option{value: "8"} 08
            %option{value: "9"} 09
            %option{value: "10"} 10
            %option{value: "11"} 11
            %option{value: "12"} 12
          .month-details 月
        .month
          %select#payment_card_year.card-default{name: "payment_card_year", type: "text", class: "number-herf"}
            %option{value: "2020"} 20
            %option{value: "2021"} 21
            %option{value: "2022"} 22
            %option{value: "2023"} 23
            %option{value: "2024"} 24
            %option{value: "2025"} 25
            %option{value: "2026"} 26
            %option{value: "2027"} 27
            %option{value: "2028"} 28
            %option{value: "2029"} 29
            %option{value: "2030"} 30
          .year-details 年
      .number-details
        .card-number セキュリティコード
        %span.form-require 必須
      .number
        = text_field_tag  "payment_card_cvc", "", type: 'text', class: 'cardnumber', id: "payment_card_cvc", maxlength: "4", placeholder: 'カード背面4桁もしくは3桁の番号'
      .add 
        = submit_tag "登録する", class: "token-submit", id: "payment_card_submit-button" 
= render "card_footer" 